datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}


model User {
  id        String      @id @default(uuid()) @unique
  email     String   @unique
  password  String
  firstName      String
  lastName      String
  createdAt DateTime @default(now())
  inRoom Participants?
  refreshToken String?
}

model Editor {
  id        String      @id @default(uuid()) @unique
  content      String
  roomId    String @unique
  room     Room @relation(fields: [roomId], references: [id])
}

model Room {
  id        String      @id @default(uuid()) @unique
  name      String
  createdAt DateTime @default(now())
  roomType RoomType @default(PUBLIC)
  participants Participants[]
  codeEditor Editor?
}

model Participants {
  userId      String @unique
  roomId      String
  createdAt DateTime @default(now())

  // Composite primary key
  @@id([userId, roomId])

  user      User @relation(fields: [userId], references: [id])
  room      Room @relation(fields: [roomId], references: [id])
  role      Role @default(AUDIENCE)
}


enum RoomType {
  PUBLIC
  PRIVATE
}

enum Role {
  HOST
  MODERATOR
  SPEAKER
  AUDIENCE
}
